
<h1>Tasks</h1>

  <table data-toggle="table" width="100%" border="0" cellspacing="0" cellpadding="0">
  <thead style= "background-color: #bdacac; font-family: 'Liberation Sans';font-size: 12.7px">
    <tr class="text-gray">
        <th>Name</th>
      <th data-sortable="true">Priority</th>
      <th>Project</th>
      <th>Deadline</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.priority %></td>
        <td><%= task.project.title %></td>
        <td><%= task.deadline %></td>
        <td><%= task.done %></td>
        <td><%= link_to 'Show', project_task_path(task) %></td>
        <td><%= link_to 'Edit', edit_project_task_path(@project, task) %></td>
        <td><%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_project_task_path(@project, @task) %>
